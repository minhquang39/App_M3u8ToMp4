<Window x:Class="M3U8ConverterApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ext="clr-namespace:M3U8ConverterApp.Extensions"
        xmlns:svc="clr-namespace:M3U8ConverterApp.Services"
        Title="{Binding Source={x:Static svc:LocalizationManager.Instance}, Path=[WindowTitle]}"
        Width="900"
        Height="600"
        MinWidth="700"
        MinHeight="480"
        Icon="Assets/icon.ico">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </Window.Resources>
    <TabControl Margin="8">
        <!-- Tab 1: Conversion -->
        <TabItem Header="{Binding Source={x:Static svc:LocalizationManager.Instance}, Path=[Tab_Conversion]}">
            <Grid Margin="16">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- M3U8 URL -->
                <Grid Margin="0,0,0,12">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="{ext:Loc Label_M3U8Url}" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <TextBox Grid.Column="1"
                             Text="{Binding SourceUrl, UpdateSourceTrigger=PropertyChanged}"
                             ToolTip="{ext:Loc Tooltip_M3U8Url}"
                             VerticalContentAlignment="Center" />
                    <Button Grid.Column="2"
                            Margin="8,0,0,0"
                            Padding="12 4"
                            Content="{ext:Loc Button_Paste}"
                            Command="{Binding PasteUrlCommand}"
                            ToolTip="{ext:Loc Tooltip_PasteUrl}"/>
                </Grid>

                <!-- Output file -->
                <Grid Grid.Row="1" Margin="0,0,0,12">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="{ext:Loc Label_OutputFile}" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <TextBox Grid.Column="1"
                             Text="{Binding OutputPath, UpdateSourceTrigger=PropertyChanged}"
                             VerticalContentAlignment="Center"
                             ToolTip="{ext:Loc Tooltip_OutputFile}"/>
                    <Button Grid.Column="2"
                            Margin="8,0,0,0"
                            Padding="12 4"
                            Content="{ext:Loc Button_Browse}"
                            Command="{Binding BrowseOutputCommand}"/>
                </Grid>

                <!-- Downloader -->
                <Grid Grid.Row="2" Margin="0,0,0,12">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="{ext:Loc Label_Downloader}" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <StackPanel Grid.Column="1">
                        <ComboBox ItemsSource="{Binding EngineOptions}"
                                  SelectedItem="{Binding SelectedEngineOption}"
                                  DisplayMemberPath="DisplayName"
                                  Margin="0,0,0,4"
                                  MinHeight="28"/>
                        <TextBlock Text="{Binding SelectedEngineOption.Description}"
                                   Foreground="Gray"
                                   FontSize="11"
                                   TextWrapping="Wrap"/>
                    </StackPanel>
                </Grid>

                <!-- Control buttons -->
                <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,0,0,12">
                    <Button Content="{ext:Loc Button_Start}"
                            MinWidth="100"
                            Command="{Binding StartCommand}"
                            IsDefault="True"
                            Margin="0,0,8,0"/>
                    <Button Content="{ext:Loc Button_Cancel}"
                            MinWidth="100"
                            Command="{Binding CancelCommand}"
                            IsEnabled="{Binding IsBusy}"
                            Margin="0,0,8,0"/>
                    <Button Content="{ext:Loc Button_OpenOutputFolder}"
                            MinWidth="150"
                            Command="{Binding OpenOutputFolderCommand}"/>
                </StackPanel>

                <!-- Progress bar -->
                <Grid Grid.Row="4" Margin="0,0,0,12">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <ProgressBar Height="20"
                                 Value="{Binding ProgressPercent, Mode=OneWay}"
                                 Maximum="100"/>
                    <StackPanel Grid.Column="1" Orientation="Vertical" Margin="12,0,0,0">
                        <TextBlock Text="{Binding StatusMessage}" FontWeight="Bold"/>
                        <TextBlock Text="{Binding ProgressDetails}" FontSize="11" Foreground="Gray"/>
                    </StackPanel>
                </Grid>

                <!-- Activity log -->
                <GroupBox Grid.Row="5" Header="{ext:Loc GroupBox_ActivityLog}">
                    <ListBox x:Name="ActivityLogList"
                             ItemsSource="{Binding Logs}"
                             FontFamily="Consolas"
                             FontSize="12"
                             ScrollViewer.VerticalScrollBarVisibility="Visible"
                             ScrollViewer.ScrollChanged="ActivityLogList_ScrollChanged"
                             PreviewMouseWheel="ActivityLogList_PreviewMouseWheel"/>
                </GroupBox>
            </Grid>
        </TabItem>

        <!-- Tab 2: Settings -->
        <TabItem Header="{ext:Loc Tab_Settings}">
            <Grid Margin="16">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Language Selection -->
                <GroupBox Header="Language / Ngôn ngữ" Margin="0,0,0,12">
                    <Grid Margin="8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="{ext:Loc Label_Language}" VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <ComboBox x:Name="LanguageComboBox" 
                                  Grid.Column="1"
                                  SelectionChanged="LanguageComboBox_SelectionChanged"
                                  MinHeight="28">
                            <ComboBoxItem Content="English" Tag="en"/>
                            <ComboBoxItem Content="Tiếng Việt" Tag="vi"/>
                        </ComboBox>
                    </Grid>
                </GroupBox>

                <!-- FFmpeg path -->
                <GroupBox Grid.Row="1" Header="{ext:Loc GroupBox_FfmpegConfiguration}" Margin="0,0,0,12">
                    <Grid Margin="8">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <Grid Margin="0,0,0,12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="{ext:Loc Label_FfmpegPath}" VerticalAlignment="Center" Margin="0,0,8,0"/>
                            <TextBox Grid.Column="1"
                                     Text="{Binding FfmpegPath, UpdateSourceTrigger=PropertyChanged}"
                                     VerticalContentAlignment="Center"
                                     ToolTip="{ext:Loc Tooltip_FfmpegPath}"/>
                            <Button Grid.Column="2"
                                    Margin="8,0,0,0"
                                    Padding="12 4"
                                    Content="{ext:Loc Button_Browse}"
                                    Command="{Binding BrowseFfmpegCommand}"/>
                        </Grid>

                        <CheckBox Grid.Row="1"
                                  Content="{ext:Loc Checkbox_AggressiveHttp}"
                                  IsChecked="{Binding UseAggressiveHttp}"
                                  IsEnabled="{Binding IsFfmpegSelected}"
                                  ToolTip="{ext:Loc Tooltip_AggressiveHttp}"/>
                    </Grid>
                </GroupBox>

                <!-- N_m3u8DL-RE Configuration -->
                <GroupBox Grid.Row="2" Header="{ext:Loc GroupBox_Nm3u8Configuration}" Margin="0,0,0,12">
                    <Grid Margin="8">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Grid Margin="0,0,0,12" IsEnabled="{Binding IsNm3u8DlReSelected}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="{ext:Loc Label_Nm3u8DlRePath}" VerticalAlignment="Center" Margin="0,0,8,0"/>
                            <TextBox Grid.Column="1"
                                     Text="{Binding Nm3u8DlRePath, UpdateSourceTrigger=PropertyChanged}"
                                     VerticalContentAlignment="Center"
                                     ToolTip="{ext:Loc Tooltip_Nm3u8Path}"/>
                            <Button Grid.Column="2"
                                    Margin="8,0,0,0"
                                    Padding="12 4"
                                    Content="{ext:Loc Button_Browse}"
                                    Command="{Binding BrowseNm3u8Command}"/>
                        </Grid>

                        <Grid Grid.Row="1" IsEnabled="{Binding IsNm3u8DlReSelected}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="{ext:Loc Label_ThreadCount}" VerticalAlignment="Center" Margin="0,0,8,0"/>
                            <StackPanel Grid.Column="1" Orientation="Horizontal">
                                <TextBox Width="80"
                                         Text="{Binding Nm3u8ThreadCount, UpdateSourceTrigger=PropertyChanged}"
                                         VerticalContentAlignment="Center"
                                         ToolTip="{ext:Loc Tooltip_ThreadCount}"/>
                                <TextBlock Margin="8,0,0,0" VerticalAlignment="Center" Foreground="Gray" FontSize="11"
                                           Text="{ext:Loc Info_ThreadCountNote}"/>
                            </StackPanel>
                        </Grid>
                    </Grid>
                </GroupBox>

                <!-- Info text -->
                <TextBlock Grid.Row="3" 
                           Text="{ext:Loc Info_SettingsNote}"
                           TextWrapping="Wrap" 
                           Foreground="Gray" 
                           FontSize="11"
                           Margin="0,8,0,0"/>
            </Grid>
        </TabItem>
    </TabControl>
</Window>
